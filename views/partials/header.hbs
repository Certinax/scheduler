{{!-- Signin modal --}}
<div class="modal fade" id="modalSignIn" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold darkFont">Sign In</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="mdi mdi-account prefix grey-text"></i>
                    <input type="text" id="username" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="username">Username (Email)</label>
                </div>
                <div class="md-form mb-5">
                    <i class="mdi mdi-lock prefix grey-text"></i>
                    <input type="password" id="password" class="form-control validate" autocomplete="off">
                    <label data-error="Required field" data-success="" for="paswword">Password</label>
                </div>
                <div class="text-center md-form mb-4">
                    <p class="overdueRed" id="feedbkSignin"></p>
                </div>
                <div class="collapse creation" id="createUser">
                    <div class="md-form mb-5">
                        <i class="mdi mdi-lock prefix grey-text"></i>
                        <input type="password" id="rePassword" class="form-control validate" autocomplete="off">
                        <label data-error="Required field" data-success="" for="rePassword">Re-enter password</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="mdi mdi-account prefix grey-text"></i>
                        <input type="text" id="firstname" class="form-control validate" autocomplete="off">
                        <label data-error="Required field" data-success="" for="firstname">Firstname</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="mdi mdi-account prefix grey-text"></i>
                        <input type="text" id="lastname" class="form-control validate" autocomplete="off">
                        <label data-error="Required field" data-success="" for="lastname">Lastname</label>
                    </div>
                </div>
                <div id="signinFeedback" class="text-center text-danger"></div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <div class="text-center">
                    <p>Not an account? <a id="createToggler" data-toggle="collapse" data-target=".creation"
                            aria-controls="createUser signinButton" aria-expanded="false">Create here</a></p>
                    <button id="signin" class="btn btn-finish"><span class="lightFont signupFont">Sign
                            in</span></button>
                    <div class="collapse creation" id="createButton">
                        <button id="create" class="btn btn-finish"><span class="lightFont signupFont">Create new
                                user</span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>