<!--New Appointment Modal-->
<div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <!--Content-->
    <div class="modal-content pt-3" id="modalBod">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 darkFont">New Appointment</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!--Body-->
      <div class="modal-body mb-1">
        <div class="row">
          <div class="col-sm-4">
            <div class="md-form mb-5">
              <i class="mdi mdi-calendar prefix grey-text"></i>
              <input type="text" id="startDate" class="form-control">
              <label for="startDate">Date</label>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="md-form mb-5">
              <i class="mdi mdi-clock prefix grey-text"></i>
              <input type="text" id="startTime" class="form-control">
              <label for="startTime">Start time</label>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="md-form mb-5">
              <i class="mdi mdi-clock prefix grey-text"></i>
              <input type="text" id="endTime" class="form-control">
              <label for="endTime">End time</label>
            </div>
          </div>
        </div>

      </div>

      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-primary btn-sm" id="saveAppointment">Save</button>
      </div>
    </div>
  </div>
  <!--/.Content-->
</div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger text-center">
        <h4 class="modal-title w-100 font-weight-bold">Are you sure you want to delete this author?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="text-center">
          <h5>Author id:</h5>
          <p id="deletedAuthorId"></p>
        </div>
        <div class="text-center mt-4">
          <button type="button" class="btn btn-success" id="deleteAuthor">Confirm</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
        <div class="text-center">
          <h5 id="deleteSuccess" class="text-success"></h5>
          <div id="deleteFailed">
            <h5 id="" class="text-danger">Delete Failed</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

